<h2><%= @user.name %>'s To-Dos</h2>

<div class="row">
  <div class="col-md-8">
    <table class="table table-hover">
      <thead>
        <td>Task</td>
        <td>Days left</td>
        <td>Complete</td>
      </thead>
      <tbody>
        <% if @items.any? %>
          <%= render partial: 'items/item', collection: @items %>
        <% end %>
        <tr>
          <%= render partial: 'items/form', locals: { user: @user, item: @item } %>
        </tr>
      </tbody>
    </table>
  </div>
</div>